{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "components/**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/apollo.js",
    "lib/use-authorization.js",
    "next.config.js",
    "public",
    "pages/**/*"
  ],
  "exclude": ["node_modules"]
}
